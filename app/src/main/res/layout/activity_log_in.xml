<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity">

    <TextView
        android:id="@+id/orTextLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Or"
        app:layout_constraintBottom_toTopOf="@+id/signUpNavButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logInButton" />

    <Button
        android:id="@+id/signUpNavButton"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="#B11B1B"
        android:text="Sign Up"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orTextLabel2" />

    <Button
        android:id="@+id/logInButton"
        android:layout_width="185dp"
        android:layout_height="0dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#B11B1B"
        android:text="Log In"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/orTextLabel2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginPasswordTextField" />

    <TextView
        android:id="@+id/passwordLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Password:"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/loginPasswordTextField"
        app:layout_constraintStart_toStartOf="@+id/loginPasswordTextField"
        app:layout_constraintTop_toBottomOf="@+id/loginEmailTextField" />

    <TextView
        android:id="@+id/emailLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="11dp"
        android:text="Email:"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/loginEmailTextField"
        app:layout_constraintStart_toStartOf="@+id/loginEmailTextField"
        app:layout_constraintTop_toBottomOf="@+id/badgerBeatTitle2" />

    <EditText
        android:id="@+id/loginEmailTextField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:hint="email@website.com"
        android:inputType="textEmailAddress"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/passwordLabel2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailLabel2" />

    <EditText
        android:id="@+id/loginPasswordTextField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/logInButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordLabel2" />

    <TextView
        android:id="@+id/badgerBeatTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="78dp"
        android:background="#B11B1B"
        android:padding="10dp"
        android:text="BadgerBeat"
        android:textColor="#FFFFFF"
        android:textSize="52sp"
        app:layout_constraintBottom_toTopOf="@+id/emailLabel2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>